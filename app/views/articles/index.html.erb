<h1>Articles</h1>

<%if @authors.empty? %>
  <%= render :partial => 'authors/noauthors' %>
<% else %>
 <%= link_to 'Write a new article', new_article_path,  :class => "links" if author_signed_in? %>
  <% if @posted.empty? %>
    <p>There are no articles yet.</p>
  <% else %>
 
  
  
  <ul id="main-list">
    <% @posted.each do |article| %>

  
   <li><%= link_to article.title, article %></li>
   <% end %>
  </ul>
  <% end %>
<% end %>
