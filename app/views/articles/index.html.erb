<h1>Articles</h1>

<%if @authors == [] %>
  <p> There are no authors yet. Please <%= link_to 'add one', new_author_path %></p>
<% else %>
  <% if @articles == [] %>
    <p>There are no articles yet</p>
  <% else %>
  <ul id="main-list">
  <% @articles.each do |article| %>

  
   <li><%= link_to article.title, article %></li>
   <% end %>
  </ul>
  <% end %>
  <%= link_to 'Add new article', new_article_path if author_signed_in?%>
<% end %>
