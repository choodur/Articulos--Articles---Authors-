<h1>Authors</h1>

<%if @authors.empty? %>
  <%= render :partial => 'noauthors' %>
<% else %>
<ul id="main-list">
<% @authors.each do |author| %>
  <% curclass = "" 
     curclass = author.eql?(current_author) ? "current-author" : "" %>
  <li><%= image_tag author.photo.url(:thumb), :class => "photo-thumb" %> <%= link_to author.full_name, author, :class => curclass %></li>
<% end %>
</ul>
<%= will_paginate @authors %>

<div class="page-entry-info"><%= page_entries_info @authors %></div>
<% end %>
