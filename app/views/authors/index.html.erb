<h1>Authors</h1>

<%if @authors.empty? %>
  <%= render :partial => 'noauthors' %>
<% else %>
<ul id="main-list">
<% @authors.each do |author| %>
  <% cid = "" 
     cid = author.eql?(current_author) ? "current-author" : "" %>
  <li><%= image_tag author.photo.url(:thumb), :class => "photo-thumb" %> <%= link_to author.full_name, author, :id => cid %></li>
<% end %>
</ul>

<% end %>
